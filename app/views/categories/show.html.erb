# encoding: UTF-8
<link rel="stylesheet" href="<%= get_current_host_and_port %>application/css/reset.css">
<link rel="stylesheet" href="<%= get_current_host_and_port %>application/css/style.css">
<link rel="stylesheet" href="<%= get_current_host_and_port %>application/css/colorbox.css"/>
<script type="text/javascript" src="<%= get_current_host_and_port %>application/js/jquery-1.7.2.js"></script>
<script type="text/javascript" src="<%= get_current_host_and_port %>application/js/jquery.colorbox-min.js"></script>
<script>
    $(document).ready(function(){
        $(".iframe").colorbox({iframe:true, width:"780", height:"600"});
        $("#click").click(function(){
            $('#click').css({"background-color":"#f00", "color":"#fff", "cursor":"inherit"}).text("Open this window again and this message will still be here.");
            return false;
        });
    });


</script>
<script type="text/javascript">
    function save() {
        str = document.forms[0].input.value;
        mydoc = window.open();
        mydoc.document.write(str);
        mydoc.document.execCommand("saveAs", true, ".html");
        mydoc.close();
        return false;
    }
</script>
<style>
    #main {
        background: url(<%= get_current_host_and_port %>application/images/banner-vd.jpg) top right no-repeat #fff;
        overflow: hidden
    }

    #side {
        width: 156px;
        text-align: right;
        padding-top: 50px
    }

    #side li {
        padding-right: 20px;
        margin: 15px 0
    }

    #side a {
        color: #000;
        font-size: 15px
    }

    #side .active a {
        color: #820000
    }

    #side .active {
        background: url(<%= get_current_host_and_port %>application/images/vd-01.jpg) right center no-repeat;
    }

    #content {
        margin: 0 0 0 0;
        padding: 200px 90px 0 90px;
        width: 664px
    }

    h4 {
        color: #a72c07;
        font-size: 18px;
        height: 30px
    }

    hr {
        width: 800px;
        height: 25px;
        border: 0;
        border-top: 1px dashed #aaa;
        margin-top: 25px
    }
</style>
<%= render :partial => "shared/application_top" %>
<!--header-->
<div id="container">
  <div id="main">
    <div id="side" class="left">
      <ul class="tabs">
        <% if params[:id]== @category_01.id.to_s() %>
            <li class="active"><a href="<%= category_path(@category_01) %>"><%= @category_01.name %></a></li>
        <% else %>
            <li><a href="<%= category_path(@category_01) %>"><%= @category_01.name %></a></li>
        <% end %>
        <% if params[:id]== @category_02.id.to_s() %>
            <li class="active"><a href="<%= category_path(@category_02) %>"><%= @category_02.name %></a></li>
        <% else %>
            <li><a href="<%= category_path(@category_02) %>"><%= @category_02.name %></a></li>
        <% end %>
        <% if params[:id]== @category_03.id.to_s() %>
            <li class="active"><a href="<%= category_path(@category_03) %>"><%= @category_03.name %></a></li>
        <% else %>
            <li><a href="<%= category_path(@category_03) %>"><%= @category_03.name %></a></li>
        <% end %>
      </ul>
    </div>
    <!--side-->
    <div id="content" class="right">
      <div id="tab1" class="tab_content">
        <% @videos.each do |video| %>
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
              <tr>
                <td width="52%" rowspan="2" align="left" valign="top">
                  <img src="<%= video.image_url(:thumb) %>" width="233" height="164"/>
                </td>
                <td height="122" colspan="2" align="left" valign="top"><h4><%= video.title %></h4>
                  <%= video.content %>
                </td>
              </tr>
              <tr>
                <td width="26%">
                  <a href="<%= category_video_path(@category, video) %>" class='iframe'><img src="<%= get_current_host_and_port %>application/images/vd-02.jpg" width="147" height="41"/></a>
                </td>
                <td width="22%">
                  <a href="<%= category_video_path(@category, video) %>" ><img src="<%= get_current_host_and_port %>application/images/vd-03.jpg" width="147" height="41"/></a>
                </td>
              </tr>
            </table>
            <hr/>
        <% end %>
      </div>
      <!--tab1-->
    </div>
    <!--content-->
  </div>
  <!--main-->
  <%= render :partial => "shared/application_footer" %>
  <!--link-->
</div>
