<script src="<%= get_current_host_and_port %>build/jquery.js"></script>
<script src="<%= get_current_host_and_port %>build/mediaelement-and-player.min.js"></script>
<link rel="stylesheet" href="<%= get_current_host_and_port %>build/mediaelementplayer.min.css"/>
<video width="640" height="480" src="<%=@video.video_url%>" type="video/mp4"
	id="player1" poster="<%=@video.image_url(:thumb)%>" 
	controls="controls" preload="none"></video>
<script>
$('audio,video').mediaelementplayer({
	success: function(player, node) {
		$('#' + node.id + '-mode').html('mode: ' + player.pluginType);
	}
});
</script>