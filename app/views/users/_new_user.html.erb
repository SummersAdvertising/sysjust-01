 <%= form_for(@user) do |f| %>
  <div class="main-text">    
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <th width="10%">姓名</th>
        <% @user.errors.full_messages.each do |msg| %>
          <%if msg.include?("Name")%>
            <%= msg %>
          <%end%>
        <% end %>
        <td width="20%"><%= f.text_field :name %></td>

        <th width="10%">帳號</th>
        <% @user.errors.full_messages.each do |msg| %>
          <%if msg.include?("Email")%>
            <%= msg %>
          <%end%>
        <% end %>
        <td width="60%"><%= f.text_field :email %></td>
      </tr>
    </table>
    <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin-top:10px">
      <tr>
        <th width="10%">密碼</th>
        <% @user.errors.full_messages.each do |msg| %>
          <%if msg.include?("Password")%>
            <%= msg %>
          <%end%>
        <% end %>
        <td width="37%"><%= f.password_field :password %></td>
        <th width="15%">確認密碼</th>
        <% @user.errors.full_messages.each do |msg| %>
          <%if msg.include?("Password confirmation")%>
            <%= msg %>
          <%end%>
        <% end %>
        <td width="38%"><%= f.password_field :password_confirmation %></td>
      </tr>
    </table>
  </div>
  <div class="button"><a href="#"><%= f.submit "" %><img src="<%=get_current_host_and_port%>images/add.png">新增帳號</a></div>
  <!--main-text-->
 <% end %> 