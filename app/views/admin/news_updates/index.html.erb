<h1>Listing news_updates</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Source</th>
    <th>Category</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news_updates.each do |news_update| %>
  <tr>
    <td><%= news_update.title %></td>
    <td><%= news_update.source %></td>
    <td><%= news_update.category %></td>
    <td><%= news_update.content %></td>
    <td><%= link_to 'Show', admin_news_update_path(news_update) %></td>
    <td><%= link_to 'Edit', edit_admin_news_update_path(news_update) %></td>
    <td><%= link_to 'Destroy', admin_news_update_path(news_update), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

