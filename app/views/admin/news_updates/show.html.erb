<%= render :partial => "shared/admin_top" %>
<!--top-out-->
<div id="container">
  <%= render :partial => "shared/admin_side" %>
  <!--side-->
  <div id="main" class="right">
    <div class="main-title">
      <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <td valign="top" class="title" height="22" width="98"><%= @news_update.updated_at.to_date %></td>
          <td valign="middle" class="text"><%= @news_update.title %></td>
        </tr>
      </table>
    </div>
    <div class="main-title" style="margin-top:10px">
      <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <td class="title2" height="27" width="94" valign="top" style="padding-top:5px">消息來源</td>
          <td class="text" width="233"><%= @news_update.source %></td>
          <td class="title2" style="border-left: 1px solid rgb(204, 204, 204);padding-top:5px" width="94" valign="top">內容分類</td>
          <td class="text" width="233"><%= @news_update.category %></td>
        </tr>
      </table>
    </div>
    <div class="main-text"><%= @news_update.content.gsub("\n", "<br />").html_safe %></div>
    <div class="button"><a href="<%=edit_admin_news_update_path(@news_update)%>"><img src="<%=get_current_host_and_port%>images/edit.png">編輯</a></div>
    <div class="button"><a href="<%=admin_news_updates_path%>"><img src="<%=get_current_host_and_port%>images/back.png">返回</a></div>
    </div>
    </div>
  <!--main-->
</div>
<!--container-->
<div id="footer"></div>
<!--footer-->