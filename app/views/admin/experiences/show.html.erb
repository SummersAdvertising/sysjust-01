<%= render :partial => "shared/admin_top" %>
<div id="container">
  <%= render :partial => "shared/admin_side" %>
  <!--side-->
  <div id="main" class="right">
    <div class="main-data">
      <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <th width="7%" align="left">日期</th>
          <td width="15%" align="left"><%=@experience.updated_at.to_date%></td>
          <th width="7%" align="left">姓名</th>
          <td width="12%" align="left"><%= @experience.contact_person %></td>
          <th width="14%" align="left">公司名稱</th>
          <td width="45%" align="left"><%= @experience.company_name %></td>
        </tr>
        <tr>
          <th align="left">電話</th>
          <td align="left"><%= @experience.phone_number %></td>
          <th align="left">人數</th>
          <td align="left"><%= @experience.attendant_number %></td>
          <th align="left">Email</th>
          <td align="left"><%= @experience.email %></td>
        </tr>


      </table>
    </div>
    <div class="main-text"> <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <th width="14%" align="left">業務員信箱</th>
        <td width="86%"><%= @experience.service_email %></td>
      </tr>
    </table>
    </div>
    <div class="button"><a href="<%=edit_admin_experience_path(@experience)%>"><img src="<%=get_current_host_and_port%>images/edit.png">編輯</a></div>
    <div class="button"><a href="<%=admin_experiences_path%>"><img src="<%=get_current_host_and_port%>images/back.png">返回</a></div>
  </div>
</div>
<!--container-->
<div id="footer"></div>
