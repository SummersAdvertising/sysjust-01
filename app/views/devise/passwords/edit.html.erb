<%= render :partial => "shared/admin_top" %>
<!--top-out-->
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
<div id="container">
  <div id="main" class="main-sign">
    <h2><img src="<%=get_current_host_and_port%>images/psw.png" width="16" height="16" /> 重設您的密碼</h2>
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td align="left">請輸入新密碼<br>
          <%= f.password_field :password %></td>
      </tr>
      <tr>
        <td align="left">再次確認新密碼<br>
          <%= f.password_field :password_confirmation %></td>
      </tr>
    </table>
    <div class="button">
      <%= f.submit "" %>
      <img src="<%=get_current_host_and_port%>images/check.png"><a>變更</a></div>
  </div>
  <!--main--> 
</div>
<!--container-->
<% end %>
<div id="footer"></div>
<!--footer-->